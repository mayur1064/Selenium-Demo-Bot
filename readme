resource "azurerm_key_vault" "example" {
  name                = "my-keyvault"
  resource_group_name = "my-rg"
  location            = "eastus"
  tenant_id           = "00000000-0000-0000-0000-000000000000"
  sku_name            = "standard"
}

resource "azurerm_key_vault_access_policy" "example_policy" {
  key_vault_id = azurerm_key_vault.example.id

  tenant_id = "00000000-0000-0000-0000-000000000000"
  object_id = "11111111-1111-1111-1111-111111111111"

  key_permissions = ["Get", "List"]
  secret_permissions = ["Get", "List", "Set"]
}

import {
  to = azurerm_key_vault_access_policy.example_policy
  id = "/subscriptions/<sub_id>/resourceGroups/my-rg/providers/Microsoft.KeyVault/vaults/my-keyvault/objectId/11111111-1111-1111-1111-111111111111"
}