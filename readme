apiVersion: apps/v1
kind: Deployment
metadata:
  name: zookeeper
  namespace: zookeeper-ns
spec:
  replicas: 1
  selector:
    matchLabels:
      app: zookeeper
  template:
    metadata:
      labels:
        app: zookeeper
    spec:
      containers:
      - name: zookeeper
        image: zookeeper:3.8  # Or your preferred version
        ports:
        - containerPort: 2181
        env:
        - name: ZOO_MY_ID
          value: "1"
        - name: ZOO_SERVERS
          value: "server.1=0.0.0.0:2888:3888"
        - name: ZOO_PORT
          value: "2181"


apiVersion: v1
kind: Service
metadata:
  name: zookeeper-service
  namespace: zookeeper-ns
spec:
  ports:
  - port: 2181
    targetPort: 2181
    protocol: TCP
  selector:
    app: zookeeper


apiVersion: v1
kind: ConfigMap
metadata:
  name: zookeeper-config
  namespace: zookeeper-ns
data:
  zoo.cfg: |
    tickTime=2000
    initLimit=10
    syncLimit=5
    dataDir=/data
    clientPort=2181
    server.1=zookeeper-0.zookeeper-service:2888:3888
    server.2=zookeeper-1.zookeeper-service:2888:3888
    server.3=zookeeper-2.zookeeper-service:2888:3888

apiVersion: v1
kind: Service
metadata:
  name: zookeeper-service
  namespace: zookeeper-ns
spec:
  ports:
    - name: client
      port: 2181
      targetPort: 2181
    - name: follower
      port: 2888
      targetPort: 2888
    - name: election
      port: 3888
      targetPort: 3888
  clusterIP: None  # Headless service for StatefulSet
  selector:
    app: zookeeper

apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: zookeeper
  namespace: zookeeper-ns
spec:
  serviceName: zookeeper-service
  replicas: 3
  selector:
    matchLabels:
      app: zookeeper
  template:
    metadata:
      labels:
        app: zookeeper
    spec:
      containers:
        - name: zookeeper
          image: zookeeper:3.8
          ports:
            - containerPort: 2181
            - containerPort: 2888
            - containerPort: 3888
          env:
            - name: ZOO_MY_ID
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: ZOO_CFG
              value: "/conf/zoo.cfg"
          volumeMounts:
            - name: data
              mountPath: /data
            - name: config
              mountPath: /conf
      volumes:
        - name: config
          configMap:
            name: zookeeper-config
  volumeClaimTemplates:
    - metadata:
        name: data
      spec:
        accessModes: ["ReadWriteOnce"]
        resources:
          requests:
            storage: 5Gi
